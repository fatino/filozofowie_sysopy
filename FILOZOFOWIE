#!/bin/bash 
##ZMIENNE
NUMER_FILOZOFA=$1
LICZBA_FILOZOFOW=$2
LICZBA_POSILKOW=$3
CZAS_KONSUMOWANIA=$4
CZAS_ROZMYSLANIA=$5
PREFIX_WIELCA=$6
SCIEZKA_STOLU=$7
zjadlem_polowe=0
liczba_polownikow=0
##
##FUNKCJE
#function losowanie(){
#    if [ "$1" =
#}
function komunikat(){ 
    echo "$($PWD/czas.sh) PID: $$ FILOZOF $NUMER_FILOZOFA : "
}

function jedzenie(){
    ##GL HF
    echo "$(komunikat) Probuje wziac $PREFIX_WIELCA$pierwszy"
    flock $SCIEZKA_STOLU/$PREFIX_WIELCA$pierwszy -c "echo $(komunikat) Wzialem $PREFIX_WIELCA$pierwszy;echo $(komunikat) Probuje wziac $PREFIX_WIELCA$drugi;flock $SCIEZKA_STOLU/$PREFIX_WIELCA$drugi -c \"echo $(komunikat) Wzialem $PREFIX_WIELCA$drugi wiec jem $ZP posilek $CZAS_KONSUMOWANIA sekund;sleep $CZAS_KONSUMOWANIA;echo $(komunikat) zjadlem $ZP posilek wiec odkladam widelce: $pierwszy i $drugi oraz rozmyslam $CZAS_ROZMYSLANIA sekund;sleep $CZAS_ROZMYSLANIA;echo $(komunikat) Koniec Rozmyslania\""
}
##
##Sprawdzam kim jestem i oznaczam kolejnosc brania widelcy
if [ $NUMER_FILOZOFA -eq 1 ] 
then
    pierwszy=$LICZBA_FILOZOFOW
    drugi=1
else
    pierwszy=$NUMER_FILOZOFA
    drugi=$(expr $NUMER_FILOZOFA - 1)
fi
##
##Zaczynam
echo "$(komunikat) +++START+++"
echo "$(komunikat) Numer filozofa: $NUMER_FILOZOFA"
echo "$(komunikat) Liczba filozofow: $LICZBA_FILOZOFOW"
echo "$(komunikat) Liczba posilkow: $LICZBA_POSILKOW"
echo "$(komunikat) Czas kosnumownia: $CZAS_KONSUMOWANIA"
echo "$(komunikat) Czas rozmyslania: $CZAS_ROZMYSLANIA"
echo "$(komunikat) Prefix widelca: $PREFIX_WIELCA"
echo "$(komunikat) Sciezka stolu: $SCIEZKA_STOLU"
##Wyswietlenie parametrow
echo 
for ZP in $(seq 1 $LICZBA_POSILKOW)
do
    if [[ "$ZP" -le "$(expr $(expr $LICZBA_POSILKOW + 1) / 2)" ]]
    then
        jedzenie
    else
        if [ $zjadlem_polowe -eq 0 ]
        then
            zjadlem_polowe=1
            echo "$(komunikat) ---POLOWA---"
            echo 1 >> kontrola_posilkow.txt
        else
            while [[ "$liczba_polownikow" -lt "$LICZBA_FILOZOFOW" ]]
            do
                liczba_polownikow=$(wc -l < kontrola_posilkow.txt)
            done
            jedzenie
        fi
    fi
done

echo "$(komunikat) +++STOP+++"
